<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:columnCount="2"
    android:orientation="horizontal"
    android:rowCount="6"
    android:useDefaultMargins="true" >

    <TextView
        android:id="@+id/lblSelectBcr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|center_vertical"
        android:layout_row="0"
        android:text="@string/text_selectbcr"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spnBcrList"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="1"
        android:prompt="@string/text_selectbcr" />

    <ToggleButton
        android:id="@+id/btnEnable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="top|fill_vertical"
        android:layout_row="1"
        android:checked="false"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnSwTrigger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="3"
        android:text="@string/btn_sw_trigger" />

    <Switch
        android:id="@+id/chkHwTrigger"
        android:layout_column="0"
        android:layout_row="4"
        android:checked="true"
        android:text="@string/lbl_hw_trigger" />

    <ScrollView
        android:id="@+id/sclBcrLog"
        android:layout_width="wrap_content"
        android:layout_height="185dp"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="left|fill_vertical"
        android:layout_row="5"
        android:layout_rowSpan="1"
        android:fillViewport="true" >

